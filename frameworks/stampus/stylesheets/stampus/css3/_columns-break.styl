@import "shared"


// Column support is imlemented uniformly across browsers thus far. Convenience mixin.
$exp-column-break(prop, val)
  experimental(prop, val,
    !'moz', 'webkit', !'o', !'ms', !'khtml', 'official'
  )



// Mixin for setting column-break-before
//
// * legal values are auto, always, avoid, left, right, page, column, avoid-page, avoid-column
//
// Example:
//    h2.before
//        column-break-before(always)
// Which generates:
//    h2.before {
//      -webkit-column-break-before: always;
//      column-break-before: always;
//    }
//

column-break-before(value=auto)
  $exp-column-break(column-break-before, value)

// Mixin for setting column-break-after
//
// * legal values are auto, always, avoid, left, right, page, column, avoid-page, avoid-column
//
// Example:
//    h2.after
//        column-break-after(always)
// Which generates:
//
//    h2.after {
//      -webkit-column-break-after: always;
//      column-break-after: always;
//    }
//    

column-break-after(value=auto)
  $exp-column-break(column-break-after, value)

// Mixin for setting column-break-inside
//
// * legal values are auto, avoid, avoid-page, avoid-column
//
// Example:
//    h2.inside
//    column-break-inside()
// Which generates:
//    h2.inside {
//      -webkit-column-break-inside: auto;
//      column-break-inside: auto;
//    }

column-break-inside(value=auto)
  $exp-column-break(column-break-inside, value)


// All-purpose mixin for setting column breaks.
//
// * legal values for $type : before, after, inside 
// * legal values for '$value' are dependent on $type
//    * when $type = before, legal values are auto, always, avoid, left, right, page, column, avoid-page, avoid-column
//    * when $type = after, legal values are auto, always, avoid, left, right, page, column, avoid-page, avoid-column
//    * when $type = inside, legal values are auto, avoid, avoid-page, avoid-column
// Example:
//    h2.before
//        column-break(before, always)
//    h2.after
//        column-break(after, always)
//    h2.inside
//        column-break(inside)
// Which generates:
//    h2.before {
//      -webkit-column-break-before: always;
//      column-break-before: always;
//    }
//    h2.after {
//      -webkit-column-break-after: always;
//      column-break-after: always;
//    }
//    h2.inside {
//      -webkit-column-break-inside: auto;
//      column-break-inside: auto;
//    }

column-break(type=before,value=auto)
 experimental("column-break-"+type, value,
    !'moz', !'webkit', !'o', !'ms', !'khtml', 'official'
  )


